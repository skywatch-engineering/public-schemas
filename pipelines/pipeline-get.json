{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/skywatch-engineering/public-schemas/master/pipelines/pipeline-get.json",
    "title": "JSON schema for pipeline... on EarthCacheâ„¢",
    "description": "<describe a pipeline>",
    "type": "object",
    "required": [
        "id",
        "start_date",
        "end_date",
        "budget_per_km2",
        "resolution_low",
        "resolution_high",
        "cloud_cover_percentage",
        "interval",
        "interval_slack",
        "priorities",
        "output",
        "status",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "start_date": {
            "description": "<describe start_date>",
            "type": "string",
            "format": "date"
        },
        "end_date": {
            "description": "<describe end_date>",
            "type": "string",
            "format": "date"
        },
        "budget_per_km2": {
            "type": "number",
            "minimum": 0
        },
        "resolution_low": {
            "description": "<describe resolution_range>",
            "type": "number",
            "minimum": 0.4,
            "maximum": 30
        },
        "resolution_high": {
            "description": "<describe resolution_high>",
            "type": "number",
            "minimum": 0.4,
            "maximum": 30
        },
        "cloud_cover_percentage": {
            "description": "<describe cloud_cover_percentage>",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "interval": {
            "type": "string",
            "pattern": "[1-9]\\d{0,2}d"
        },
        "interval_slack": {
            "type": "string",
            "pattern": "\\d{1,3}d"
        },
        "priorities": {
            "type": "array",
            "description": "<describe priorities>",
            "items": {
                "enum": [
                    "recent",
                    "cloudcover",
                    "resolution",
                    "cost",
                    "first",
                    "middle"
                ]
            },
            "uniqueItems": true,
            "minLength": 6,
            "maxLength": 6
        },
        "aoi": {
            "$ref": "supported-geojson.json"
        },
        "area_km2": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "output": {
            "type": "object",
            "required": [
                "id",
                "format"
            ],
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "format": {
                    "enum": [
                        "geotiff",
                        "png"
                    ]
                }
            }
        },
        "tags": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "required": [
                        "label",
                        "value"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "label": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            ]
        },
        "status": {
            "enum": [
                "active",
                "inactive",
                "complete"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    }
}